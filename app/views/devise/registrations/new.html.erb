<main class="contents-container">
  <div class="bredcrumb">
    <%= link_to "ホーム", root_path, class:"bredcrumb-link" %> > 新規登録
  </div>
  <div class="form-wrapper">
    <h3 class="form-title">アカウントを作成</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="row mb-3">
        <%= f.label :name, "ユーザー名", class: "col-sm-4 col-form-label required" %>
        <div class="col-sm-8">
          <%= f.text_field :name, class: "form-control", required: true %>
        </div>
      </div>
      
      <div class="row mb-3">
        <%= f.label :email, "メールアドレス", class: "col-sm-4 col-form-label required" %>
        <div class="col-sm-8">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
        </div>
      </div>

      <div class="row mb-3">
        <%= f.label :password, "パスワード（6文字以上）", class: "col-sm-4 col-form-label required" %>
        <div class="col-sm-8">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
        </div>
      </div>

      <div class="row mb-3">
        <%= f.label :password_confirmation, "パスワード（確認用）", class: "col-sm-4 col-form-label required" %>
        <div class="col-sm-8">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
        </div>
      </div>

      <div class="agreement-box-wrapper">
        <%= f.check_box :agreement, :as => :boolean, checked:false, class:"agreement-box", required: true %>
        <%= link_to " 利用規約", terms_path %>
        <p>と</p>
        <%= link_to "プライバシーポリシー", policy_path %>
        <p>に同意する</p>
      </div>

      <div class="form-btn-wrapper">
        <%= link_to :back do %>
          <button type="button" class="cancel-btn">キャンセル</button>
        <% end %>
        <%= f.submit "新規登録する", class:"submit-btn" %>
      </div>
    <% end %>
    <div class="login-text">
      既にアカウントをお持ちの場合は<%= link_to "ログイン", new_session_path(resource_name) %>してください。
    </div>
  </div>
</main>
