<div class="title">
  <div class="title-container">
    <h2><%= @category.name %>のマイデザイン一覧</h2>
  </div>
</div>

<main class="contents-container">
  <div class="bredcrumb"> <%= link_to "HOME", root_path %> > <%= link_to @category.name, category_posts_path(@category.id) %> > 対象のマイデザイン </div>
  <div class="contents-wrapper">
    <p class="contents-wrapper-title">全 <%= @category.posts.count %> 件</p>
    <ul class="post-list">
      <% @category.posts.each do |post| %>
        <li class="post-wrapper">
          <%= link_to post, class:"post" do %>
              <%= image_tag post.image.variant(resize_to_fill: [285, 170]), class:"post-image" %>
              <div class="post-title"><%= post.title %></div>
              <p class="post-id"><%= post.work_id %></p>
          <% end %>
          <div class="post-under">
            <%= link_to "by #{post.user.name}", post.user, class:"post-user-name" %>
            <div class="post-favorite">
              <div class="post-favorite-count"> お気に入り<%= post.favorites.count %>件 </div>
              <%= render 'favorites/btn', post: post %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</main>
