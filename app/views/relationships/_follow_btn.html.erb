<% if current_user != user %>
  <% if current_user.following?(user) %>
    <object><%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, class:"follow-btn-dark" %></object>
  <% else %>
    <object><%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"follow-btn-light" %></object>
  <% end %>
<% end %>
