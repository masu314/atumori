<%= link_to "ホーム", root_path %></br>
<h2>ユーザー情報</h2>
<h3>ユーザー名</h3>
<%= @user.name %>
<h3>アイコン</h3>
<%= image_tag @user.user_image.variant(resize_to_fill: [250, 250]) if @user.user_image.attached?%>
<h2>投稿一覧</h2>
<% @posts.each do |post| %>
  <%= link_to post do %>
    <p><%= post.title %></p>
    <p><%= image_tag post.image.variant(resize_to_fill: [400, 250]) if post.image.attached? %></p>
  <% end %>
<% end %>
