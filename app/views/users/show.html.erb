<div class="account-container">
   <div class="account-wrapper">
     <div class="account-wrapper-left">
       <%= image_tag @user.user_image.variant(resize_to_fill: [120, 120]), class:"user-image account-image" if @user.user_image.attached?%>
       <div class="account-text">
         <h3><%= @user.name %></h3>
         <div class="account-second-line">
           <p>投稿<%= @user.posts.count %>件</p>
           <%= link_to user_followings_path(@user), class:"account-second-line-follow" do %>
              フォロー中<%= @user.followings.count %>人
          <% end %>
          <%= link_to user_followers_path(@user), class:"account-second-line-follow" do %>
            フォロワー<%= @user.followers.count %>人
          <% end %>
          <%= render "relationships/follow_btn", user: @user %>
         </div>
        <% if @user.friend_code.present? %>
          <p>フレンドコード：<%= @user.friend_code %></p>
         <% end %>
        <p class="account-profile"><%= @user.profile %></p>
      </div>
    </div>
    <div class="account-wrapper-right">
      <% if @user === current_user %>
        <%= link_to edit_user_registration_path do %>
          <button class="btn-dark">編集</button>
        <% end %>
      <% end %>
    </div>
  </div>
</div>


<main class="contents-container">
  <div class="tab-wrap">
    <input id="TAB-01" type="radio" name="TAB" class="tab-switch" checked="checked" /><label class="tab-label" for="TAB-01">投稿一覧</label>
    <div class="tab-content">
      <p class="contents-wrapper-title"> <%= @user.name %> の投稿 : <%= @user.posts.count %> 件</p>
      <%= render 'posts/post_list', posts: @user.posts %>
    </div>          
    <input id="TAB-02" type="radio" name="TAB" class="tab-switch" /><label class="tab-label" for="TAB-02">お気に入り一覧</label>
    <div class="tab-content">
      <%= render "favorites/favorites" %>
    </div>
  </div>
</main>

