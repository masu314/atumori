<main class="contents-container">
  <div class="bredcrumb"> 
      <%= link_to "ホーム", root_path, class:"bredcrumb-link" %>
      > <%= link_to "ユーザー", users_path, class:"bredcrumb-link" %>
      <% if @user == current_user %>
        > <%= link_to "マイページ" , user_path(@user.id), class:"bredcrumb-link" %>
      <% else %>
        > <%= link_to @user.name , user_path(@user.id), class:"bredcrumb-link" %>
      <% end %>
      > フォロワー
  </div>
  <div class="contents-wrapper">
    <div class="contents-title">
      <div class="contents-count">
      フォロワー： <%= @users.count %> 件
      </div>
    </div>
    <%= render 'layouts/shared/user_list', users: @users %>
  </div>
</main>
